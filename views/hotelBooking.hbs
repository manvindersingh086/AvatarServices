<body align = 'center'>
<form action="/hotelDetails" method="POST">
<div style="border: solid;width:600px;background-color: white;opacity: 0.87;margin-left: 320px;height:540px;margin-top: 20px;">
    <h2 style="margin-top: 20px;">Hotel Booking</h2><br>
    <hr style="height:2px;border-width:0;color:gray;background-color:gray;width:80%">
  <div style="margin-top: 30px;">
    <table>
      <tr>
        <th>
            <label for="location" style="margin-left: 180px;">Location</label>
        </th>
        <th>
           <input type="text" id="location" name = 'location' style="width: 200px;margin-left: 10px;" placeholder="Where are you going?" required>
        </th> 
      </tr>
    </table>
  </div>

  <div style="margin-top: 30px;">
    <table>
      <tr>
        <th>
            <label for="checkIn" style="margin-left: 180px;">Check-in</label>
        </th>
        <th>
           <input type="date" id="checkInDate" name="checkInDate" placeholder="Check-in" style="width: 150px;margin-left: 10px;">
        </th>
      </tr>
    </table>
  </div>
  
  <div style="margin-top: 30px;">
    <table>
      <tr>
        <th>
            <label for="location" style="margin-left: 172px;">Check-out</label>
        </th>
        <th>
           <input type="date" id="checkOutDate" name="checkOutDate" placeholder="Check-in" style="width: 150px;margin-left: 10px;">
        </th>
      </tr>
    </table>
  </div>

  <div style="margin-top: 30px;">
    <table>
      <tr>
        <th>
            <label for="Adults" style="margin-left: 195px;">Adults</label>
        </th>
        <th>
           <input type="number" id="adults" name="adults" style="width: 150px;margin-left: 12px;" value="1">
        </th>
      </tr>
    </table>
  </div>

  <div style="margin-top: 30px;">
    <table>
      <tr>
        <th>
            <label for="children" style="margin-left: 180px;">Children</label>
        </th>
        <th>
           <input type="number" id="children" name="children" style="width: 150px;margin-left: 12px;" value="0">
        </th>
      </tr>
    </table>
  </div>
  <div style="margin-top: 30px;">
    <table>
      <tr>
        <th>
            <label for="rooms" style="margin-left: 193px;">Rooms</label>
        </th>
        <th>
           <input type="number" id="rooms" name="rooms" style="width: 150px;margin-left: 12px;" value="1">
        </th>
      </tr>
    </table>
  </div>
  <div style="margin-top: 10px;margin-left: 50px;">
    <input type="submit" value="Submit" style="background-color: crimson;">
  </div>
</form>

