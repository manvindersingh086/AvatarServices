    <table>
      <tr>
        <th style="width: 120px;">
          <label for="Name" >Name:</label>
        </th>
        <th>
           <input type="text" id="Name" name = 'Name' style="width: 150px;">
        </th>
         <th style="width: 120px;">
           <label for="Contact">Contact:</label>
         </th>
         <th>
           <input type="number" maxlength=10 id="Contact" name="Contact" Contact="Contact" style="width: 150px;" >
         </th>
          
          
        </th>
      </tr>
    </table>
  </div>

  <div style="margin-top: 30px;">
    <table>
      <tr>
        <th style="width: 120px;">
          <label for="Address">Address:</label>
        </th>
        <th>
           <input type="text" id="Address" name="Address" Address = "Address" style="width: 150px;">
        </th>
        <th style="width: 120px;">
           <label for="Zip">Zip:</label>
        </th>
        <th>
          <input type="number" maxlength=6 id="Zip" name="Zip" Zip="Zip" style="width: 150px;">
        </th>
      </tr>
    </table>
     
  </div>
  
  <div style="margin-top: 30px;">
    <table>
      <tr>
        <th style="width: 120px;">
          <label>Date of birth:</label>
        </th>
        <th>
          <input type="date" id="Date" name="Date" style="width: 145px;">
        </th>
        <th style="width: 120px;">
          <label for="UIN">UIN:</label>
        </th>
        <th>
           <input type="number" id="UIN" name="UIN" UID="UIN" style="width: 150px;">
        </th> 
   </div>
  </tr>
