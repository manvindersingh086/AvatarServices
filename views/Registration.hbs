<body align = 'center'>
<form action='/covidRegistration' method="POST" onsubmit="return validateFields()" >
  <div style="border: solid;width:600px;background-color: white;opacity: 0.6;margin-left: 320px;height:480px;margin-top: 50px;">
    <h2 style="margin-top: 40px;">Covid-19 Registration</h2><br>
    <hr style="height:2px;border-width:0;color:gray;background-color:gray;width:80%">
