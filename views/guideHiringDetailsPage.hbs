<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <style>
    input[type=text], input[type=number]{
      width: 25%;
      padding: 5px 15px;
      margin: auto;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }
 
    input[type=submit]{
      width: 10%;
      padding: 5px 15px;
      margin: auto;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
      vertical-align: middle;
                border: burlywood;
                border-radius: 4px;
                color: white;
                padding: 10px 20px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 10px 10px;
                cursor: pointer;
                width: 25%;
                background-color: #04AA6D;
      }

      body {
        background-image: url('/images/tourism.jpg');
        background-repeat: no-repeat;
        background-size: cover;
          }
  </style>
</head>

<body align = 'center'>
    <div style="border: solid;width:800px;background-color: white;opacity: 0.85;margin-left: 250px;height:480px;margin-top: 50px;">
    <h2>Guide Hiring</h2>
    <hr style="height:1px;border-width:0;color:crimson;background-color:darkkhaki;width:80%">

    {{# if guide}}
     

    {{# each guide}}
      <form action='/guidepaymentPage?Amount=50&id={{this._id}}' method="POST">
            <table>
                <tr>
                    <th style="padding-left: 50px;width:200px;">
                        <label style="color: crimson;">{{this.Name}}</label>
                    </th>
                    <th>
                        <hr style="height:100px;border-width:0;color:crimson;background-color:darkkhaki;width:1px">
                    </th>
                    <th style="padding-left: 50px;padding-right: 50px;">
                       <label for="age" name="age">{{this.Age}}</label>
                    </th>
                    <th>
                        <hr style="height:100px;border-width:0;color:crimson;background-color:darkkhaki;width:1px">
                    </th>
                    <th style="width: 300px;">
                        <label for="description">{{this.Description}}</label>
                    </th>
                     <th>
                        <hr style="height:100px;border-width:0;color:crimson;background-color:darkkhaki;width:1px">
                    </th>
                    <th style="width: 400px;">
                        <input type="hidden" id="amount" name="amount" value="{{this.Fee}}">
                         <label for="fee">{{this.Fee}}</label>
                    </th>
                     <th>
                        <hr style="height:100px;border-width:0;color:crimson;background-color:darkkhaki;width:1px">
                    </th>
                    <th style="width: 400px;">
                         <label for="city">{{this.City}}</label>
                    </th>
                    <th>
                        <hr style="height:100px;border-width:0;color:crimson;background-color:darkkhaki;width:1px">
                    </th>
                    <th style="width: 400px;">
                         <label for="language">{{this.Language}}</label>
                    </th>
                    <th>
                      <input type="hidden" id="hotelId" name="hotelId" value="{{this._id}}">
                      <button  class="buttons button2" name="hotelId" value="{{this_id}}" style="vertical-align:middle;margin-top: 20px;margin-left: 30px;margin-right: 30px; width: 50px;background-color: goldenrod;">Hire
                          
                      </button></th>
                </tr>
            </table>
        </form>
    {{/each}}
    
{{/if}}
 </div>
</body>
</html>
