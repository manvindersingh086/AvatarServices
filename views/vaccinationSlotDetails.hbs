<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <style>
    input[type=text], input[type=number]{
      width: 25%;
      padding: 5px 15px;
      margin: auto;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }
 
    input[type=submit]{
      width: 10%;
      padding: 5px 15px;
      margin: auto;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
      vertical-align: middle;
                border: burlywood;
                border-radius: 4px;
                color: white;
                padding: 10px 20px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 10px 10px;
                cursor: pointer;
                width: 25%;
                background-color: #04AA6D;
      }

      body {
        background-image: url('/images/Covid.jpg');
        background-repeat: no-repeat;
        background-size: cover;
          }
  </style>
  <script type="text/javascript" src="/validation/covid.js"></script>
</head>

<body align = 'center'>
    <div style="border: solid;width:600px;background-color: white;opacity: 0.6;margin-left: 320px;height:480px;margin-top: 50px;">
    <h2>Vaccination Slots</h2>
    <hr style="height:1px;border-width:0;color:gray;background-color:gray;width:80%">
    
    {{# if slots}}
      <form action='/vaccineSlotConfirmation?vaccineData={{vaccine}}' method="POST">
    {{# each slots}}
        
         <input type="hidden" name = "vaccineDa" id="vaccineDa" value="{{vaccine}}" >{{vaccine}}</input>
            <table>
                <tr>
                     <h3 style="text-align: left;margin-left: 50px;margin-top: 25px;">{{this.centreName}}</h3>
                     <hr style="height:1px;border-width:0;color:crimson;background-color:darkkhaki;width:100%">
                </tr>
                <tr>
                    
                    <th>
                       <input type="radio" id="Slot1" name="Slot" value="{{this.centreName}}' '{{this.Slot1}}">
                       <label for="Slot">{{this.Slot1}}</label>

                       <input type="radio" id="Slot2" name="Slot" value="{{this.centreName}}' '{{this.Slot2}}">
                       <label for="Slot">{{this.Slot2}}</label><br>

                        <input type="radio" id="Slot3" name="Slot" value="{{this.centreName}}' '{{this.Slot3}}">
                      <label for="Slot">{{this.Slot3}}</label>

                      <input type="radio" id="Slot4" name="Slot" value="{{this.centreName}}' '{{this.Slot4}}">
                      <label for="Slot">{{this.Slot4}}</label><br>
                    </th>
                    <th><button  class="buttons button2" style="vertical-align:middle;margin-top: 20px;margin-left: 140px;">Submit</button></th>
                </tr>
            </table>
        
    {{/each}}
    </form>
{{/if}}
 </div>
</body>
</html>
