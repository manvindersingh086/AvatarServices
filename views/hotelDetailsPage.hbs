<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <style>
    input[type=text], input[type=number]{
      width: 25%;
      padding: 5px 15px;
      margin: auto;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }
 
    input[type=submit]{
      width: 10%;
      padding: 5px 15px;
      margin: auto;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
      vertical-align: middle;
                border: burlywood;
                border-radius: 4px;
                color: white;
                padding: 10px 20px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 10px 10px;
                cursor: pointer;
                width: 25%;
                background-color: #04AA6D;
      }

      body {
        background-image: url('/images/tourism.jpg');
        background-repeat: no-repeat;
        background-size: cover;
          }
  </style>
</head>

<body align = 'center'>
    <div style="border: solid;width:800px;background-color: white;opacity: 0.85;margin-left: 250px;height:480px;margin-top: 50px;">
    <h2>Hotel Booking</h2>
    
    {{# if HD}}
     

    {{# each HD}}
      <form action='/HotelBookingUserDetails' method="POST">
            <table>
                <tr>
                    <hr style="height:1px;border-width:0;color:crimson;background-color:darkkhaki;width:100%">
                    <h3 style="text-align: left;margin-left: 50px;margin-top: 25px;color: crimson;">{{this.Name}}</h3>
                </tr>
                <tr>
                    <th style="padding-left: 50px;">
                       <input type="hidden" id="price1" name="price1" value="{{this.price}}">
                       <label for="Slot" name="price" value="{{this.price}}">{{this.Price}}</label>
                    </th>
                    <th>
                        <hr style="height:100px;border-width:0;color:crimson;background-color:darkkhaki;width:1px">
                    </th>
                    <th style="width: 200px;">
                        <label for="Slot">{{this.Address}}</label>
                    </th>
                     <th>
                        <hr style="height:100px;border-width:0;color:crimson;background-color:darkkhaki;width:1px">
                    </th>
                    <th style="width: 400px;">
                         <label for="Slot">{{this.Details}}</label>
                    </th>
                    <th>
                      <input type="hidden" id="hotelId" name="hotelId" value="{{this._id}}">
                      <button  class="buttons button2" name="hotelId" value="{{this_id}}" style="vertical-align:middle;margin-top: 20px;margin-left: 30px;margin-right: 30px; width: 50px;background-color: goldenrod;">Book</button></th>
                </tr>
            </table>
        </form>
    {{/each}}
    
{{/if}}
 </div>
</body>
</html>
