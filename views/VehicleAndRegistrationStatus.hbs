                    </th>
                    <th>
                        <hr style="height:1px;border-width:0;color:gray;background-color:gray;width:60%">
                    </th>
                </tr>
                <tr>
                    <th style="padding-left: 50px;">
                        {{this._id}}
                        
                    </th>
                    <th>
                          <div class = "vertical"></div>
                     </th>
                    <th>
                        {{this.Name}}
                    </th>
                    <th>
                          <div class = "vertical"></div>
                     </th>
                    <th>
                        {{this.Email}}
                    </th>
                    <th>
                          <div class = "vertical"></div>
                     </th>
                    <th>
                        <div style="color:lightsalmon;" id="status" value="{{this.Status}}">{{this.Status}}</div>
                    </th>
                </tr>
                
                        
                 
            </table>
            <div>
                 <input type="submit" value="Home">
            </div>
            <div id="card">
                 <a href="downloadVehicleRegCard?id={{this._id}}&Name={{this.Name}}&Dob={{this.DateofBirth}}&Address={{this.Address}}">Download Vehical Registration Card</a>
            </div>
    {{/each}}
    </form>
{{/if}}
 </div>
